package CoursoJava06;

import java.util.Scanner;

public class ternaryConditionalExpression {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		double preco = 34.5;
		double desconto;
		if (preco < 20.0) {
			desconto = preco * 0.1;
		}
		else {
			desconto = preco *0.05;
		}
		
		System.out.println("Valor do Proguto: "+ desconto);
		
		sc.close();
	}

}
